<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorAccent">

    <ImageView
            android:id="@+id/menuRazdelImageViewLogo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="160dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/test_image_logo"
            android:layout_height="160dp"/>

    <TextView
            app:layout_constraintLeft_toRightOf="@+id/menuRazdelImageViewLogo"
            android:id="@+id/menuRazdelTextViewTitle"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/menuRazdelImageViewOptionsMenu"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            tools:text="Авогадо"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

    <TextView
            app:layout_constraintLeft_toRightOf="@+id/menuRazdelImageViewLogo"
            android:id="@+id/menuRazdelTextViewDescription"
            android:layout_width="0dp"
            app:layout_constraintRight_toLeftOf="@+id/menuRazdelImageViewOptionsMenu"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/menuRazdelTextViewTitle"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            tools:text="авокадо"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:id="@+id/menuRazdelImageViewOptionsMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_options_menu"
            android:tint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="16dp"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            app:layout_constraintLeft_toRightOf="@+id/menuRazdelImageViewLogo"
            android:id="@+id/menuRazdelTextViewPrice"
            android:layout_width="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:maxLength="10"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccentGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="666999 тг"
            android:layout_marginStart="16dp"/>

    <View
            android:id="@+id/menuRazdelBottomLine"
            app:layout_constraintTop_toBottomOf="@+id/menuRazdelImageViewLogo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrayLight"/>

</android.support.constraint.ConstraintLayout>